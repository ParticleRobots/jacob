  pinMode(motor_right, OUTPUT);


}

void loop() {
  // put your main code here, to run repeatedly:
  ultra_sonic();
  if (distance > 125) {
     digitalWrite(motor_left, LOW);//the motor will stop
    digitalWrite(motor_right, LOW);//the motor will stop
    servo.write(0);
      servo2.write(0);
      delay(5);
      servo.write(180);
      servo2.write(180);
      delay(5);
    
    music();
  } else {
    digitalWrite(motor_left, HIGH);//the motor will move forward
    digitalWrite(motor_right, HIGH);//the motor will move forward
    delay(500);

    
    Serial.print("distance: ");
    Serial.print(distance);
    Serial.println("cm");
    


    
      

  }

  // check to see if it's time to change the state of the LED
  unsigned long currentMillis = millis();
 
  if((ledState1 == HIGH) && (currentMillis - previousMillis1 >= OnTime1))
  {
    ledState1 = LOW;  // Turn it off
    previousMillis1 = currentMillis;  // Remember the time
    digitalWrite(ledPin1, ledState1);  // Update the actual LED
  }
  else if ((ledState1 == LOW) && (currentMillis - previousMillis1 >= OffTime1))
  {
    ledState1 = HIGH;  // turn it on
    previousMillis1 = currentMillis;   // Remember the time
    digitalWrite(ledPin1, ledState1);    // Update the actual LED
  }











}



void music() {
  {
    Serial.println("ERROR");
    // iterate over the notes of the melody.
    // Remember, the array is twice the number of notes (notes + durations)
    for (int thisNote = 0; thisNote < notes * 2; thisNote = thisNote + 2) {

      // calculates the duration of each note
      divider = pgm_read_word_near(melody + thisNote + 1);
      if (divider > 0) {
        // regular note, just proceed
        noteDuration = (wholenote) / divider;
      } else if (divider < 0) {
        // dotted notes are represented with negative durations!!
        noteDuration = (wholenote) / abs(divider);
        noteDuration *= 1.5; // increases the duration in half for dotted notes
      }

      // we only play the note for 90% of the duration, leaving 10% as a pause
      tone(buzzer, pgm_read_word_near(melody + thisNote), noteDuration * 0.9);

      // Wait for the specief duration before playing the next note.
      delay(noteDuration);

      // stop the waveform generation before the next note.
      noTone(buzzer);
    }

  }
}


